{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "random-branch",
  "title": "Random Branch",
  "description": "Generate random GitHub branch for Shu.",
  "icon": "command-icon.png",
  "author": "shu",
  "categories": [
    "Developer Tools"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Random Branch",
      "subtitle": "Generate random branch name",
      "description": "Generate a random branch name such as `shu/1nxh`.",
      "mode": "no-view",
      "preferences": [
        {
          "name": "branch-prefix",
          "title": "Branch Prefix",
          "description": "The prefix of the branch name.",
          "type": "textfield",
          "default": "shu",
          "required": false
        },
        {
          "name": "suffix-length",
          "title": "Suffix Length",
          "description": "The length of the random suffix.",
          "type": "dropdown",
          "default": "4",
          "data": [
            {
              "value": "3",
              "title": "3"
            },
            {
              "value": "4",
              "title": "4"
            },
            {
              "value": "5",
              "title": "5"
            },
            {
              "value": "6",
              "title": "6"
            },
            {
              "value": "7",
              "title": "7"
            },
            {
              "value": "8",
              "title": "8"
            },
            {
              "value": "9",
              "title": "9"
            },
            {
              "value": "10",
              "title": "10"
            }
          ],
          "required": false
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.39.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
